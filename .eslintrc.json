{
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "airbnb-base",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-console": "off",
      "no-undef": "error",
      "no-plusplus": "off",
      "indent": ["error", 2],
      "no-trailing-spaces": "error",
      "eol-last": "error"
    }
  }